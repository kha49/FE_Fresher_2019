mixin adaptis-slide
    .adaptis-slide
        each val, index in adaptisBanner
            .adaptis-slide__stories.mySlides(style=`background-image: url(${val.background})`)
                .adaptis-caption
                    .adaptis-caption__title= val.title
                    .adaptis-caption__subject= val.subject
                    .adaptis-caption__description= val.description
                    .adaptis-caption__link
                        a(href="#")= val.link
        .adaptis-slide-button
            button(type="button" onclick="plusDivs(-1)").left-button
            button(type="button" onclick="plusDivs(1)").right-button

block content
    +adaptis-slide