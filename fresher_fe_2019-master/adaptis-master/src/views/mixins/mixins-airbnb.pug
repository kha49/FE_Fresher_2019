mixin airbnb-banner
    div
        .mySlides
        .airbnb-brand
            a(href="#").airbnb-logo
                img(src="../../assets/images/airbnb-brands.png")
            a(href="#").airbnb-down-button
                img(src="../../assets/images/chevron-down-solid.png")
        .airbnb-title
            p Book unique places to stay and thing to do.

- const menubar=["Host a home", "Host an experience", "Help", "Sign up", "Log in"]
mixin airbnb-menubar
    .airbnb-menubar
        each n in menubar
            div
                a(href="#")= n
    

mixin airbnb-search
    .airbnb-form-screen__medium
        form(action="#")
            .airbnb-form-screen-medium__title
                p Book unique places to stay and things to do.
            .airbnb-form-screen-medium__where
                .airbnb-form-screen-medium__where--title
                    p WHERE
                .airbnb-form-screen-medium__where--input
                    input(type="text" placeholder="Anywhere")
            .airbnb-form-screen-medium__date
                .airbnb-form-screen-medium-date__checkin
                    .airbnb-form-screen-medium-date__checkin--title
                        p CHECK-IN
                    .airbnb-form-screen-medium-date__checkin--input
                        input(type="text" placeholder="dd/mm/yyyy")
                .airbnb-form-screen-medium-date__checkout
                    .airbnb-form-screen-medium-date__checkout--title
                        p CHECK-OUT
                    .airbnb-form-screen-medium-date__checkout--input
                        input(type="text" placeholder="dd/mm/yyyy")
            .airbnb-form-screen-medium__guests
                .airbnb-form-screen-medium__guests--title
                    p GUESTS
                .airbnb-form-screen-medium__guests--button
                    button Guests
                        span
                            img(src="../../assets/images/chevron-down-solid-1.png")
            .airbnb-form-screen-medium__search--button
                div
                    button Search

    .airbnb-form__screen--small
        form(action="#")
            .airbnb-form-where
                .airbnb-form-where__title
                    p WHERE
                .airbnb-form-where__input
                    input(placeholder="Anywhere")
            .airbnb-form-date
                .airbnb-form-date__checkin
                    .airbnb-form-date__checkin--title
                        p CHECK_IN
                    .airbnb-form-date__checkin--input
                        input(placeholder="mm/dd/yyyy")
                .airbnb-form-date__checkout
                    .airbnb-form-date__checkout--title
                        p CHECK-OUT
                    .airbnb-form-date__checkout--input
                        input(placeholder="mm/dd/yyyy")
            .airbnb-form-guests
                .airbnb-form-guests__title
                    p GUESTS
                .airbnb-form-guests__input
                    button Guests
                        span
                            img(src="../../assets/images/chevron-down-solid-1.png")
            .airbnb-search-button
                button Search

