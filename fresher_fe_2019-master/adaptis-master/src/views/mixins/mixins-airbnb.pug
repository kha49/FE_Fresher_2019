mixin airbnb-explore-slide(name)
    .airbnb-explore-content__slide
        .airbnb-explore-content__slide--image
            img(src=name.image)
        .airbnb-explore-content__slide--title
            p=name.title
        .airbnb-explore-content__slide--description
            p=name.description

mixin airbnb-explore
    .airbnb-explore-title
        p Explore Airbnb
    .airbnb-explore-content.responsive
            each n in array 
                +airbnb-explore-slide(n)


