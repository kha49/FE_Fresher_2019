//- main box-content
mixin box-content(title, content, link)
  .box-content
    div
      h1(style='font-size: 24px').box-content_title=title
    div
      p(style='font-family:Circular, font-size: 16px, color:#484848').box-content__content=content
    div
      p.box-content__content
        a(href="#", title="title")=link

//-main comboBox
mixin comboBox(index, title, content, link)
  .comboBox
    div
      span(style='width: 48px,height: 48px,background-color: rgb(0, 132, 137),border-radius: 3px;')=index+1 
    div
      h1(style='font-size: 24px').box-content_title=title
    div
      p(style='font-family:Circular, font-size: 16px, color:#484848').box-content__content=content
    div
      p.box-content__content
        a(href="#", title="title")=link

//- footer list-box
mixin list-box(title, subs, icons)
  ul.list
    li.list__title=title
    each icon in icons
      i(class=icon)
    each sub in subs
      li.list__sub=sub

//-modal-main

mixin modalMainQuestions(idQuestions, idBtnQuestions, questionsTitle, subArr)
  div.modal-questions(id=idQuestions) 
    div.modal-questions__icon
      span.modal-questions__icon-close(id=idBtnQuestions)
        i(class='fas fa-times')
    div.modal-questions__content
      h2.modal-questions__title= questionsTitle 
      each sub in subArr
        p.modal-questions__sub= sub

  //-modal footer
mixin modalFooter(idModal, titleModal, elementArr)
  div.footer-modal__content(id=idModal)
    div.footer-modal__content__title
      h1.title= titleModal
    div.footer-modal__content__language-list
      ul.language-list
        each element in elementArr
          li.li= element