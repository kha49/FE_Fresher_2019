mixin adaptisVer2Header
    header.adaptisVer2Header
        .adaptisVer2Header-logo
            a(href="#") ADAPTIS
        .adaptisVer2Header-menu-bar#menuBar
            .adaptisVer2Header-menu-bar__items
                a(href="#", title="ADAPTIS")#firstChildItem ADAPTIS
                each val, index in adaptisHeaderMenuBarItems
                    a(href="#" title=`${val}`)= val
            .adaptisVer2Header-menu-bar__hamburger#hamburger
                each val, index in adaptisHeaderMenuBarHamburgerLine
                    i.adaptisVer2Header-menu-bar__hamburger--line(class=`adaptisVer2Header-menu-bar__hamburger--line-${val}`)

mixin adaptisVer2Title
    section.adaptisVer2Title
        p Adaptis is an independent digital agency with footprints in Australia, Hong Kong, Singapore, Switzerland, Thailand and Vietnam. We are curiosity-led, goal-focused and inspired by our desire to tell stories and create brands for a wide range of businesses that matter. We do this by solving problems through strategy, design, technology, and production.

mixin adaptisVer2Slide
    .adaptisVer2Slide
        .adaptisVer2Slide-button
            button.adaptisVer2Slide-button__left prev
            button.adaptisVer2Slide-button__right next
        .adaptisVer2Slide-slides
            .adaptisVer2Slide-slides-mySlides
                section.adaptisVer2Slide-slides-mySlides-section
                    each val, index in adaptisSlideItemCaptionArray
                        .adaptisVer2Slide-item(class=`adaptisVer2Slide-slides-mySlides-section-${val.item}` style=`background-image: url(${val.image})`)
                            .adaptisVer2Slide__caption(class=`adaptisVer2Slide-slides-mySlides-section-${val.itemCaption}`)
                                .adaptisVer2Slide__title(class=`adaptisVer2Slide-slides-mySlides-section-${val.itemCaption}__${val.itemCaptionTitle}`)= val.title
                                .adaptisVer2Slide__subject(class=`adaptisVer2Slide-slides-mySlides-section-${val.itemCaption}__${val.itemCaptionSubject}`)= val.subject
                                .adaptisVer2Slide__desc(class=`adaptisVer2Slide-slides-mySlides-section-${val.itemCaption}__${val.itemCaptionDesc}`)= val.desc
                                .adaptisVer2Slide__link(class=`adaptisVer2Slide-slides-mySlides-section-${val.itemCaption}__${val.itemCaptionLink}`)
                                    a(href="#" title=`${val.link}`)= val.link

mixin adaptis-introduction-item
    .adaptis-introduction-item
        .adaptis-introduction-item-content(class='skrollable skrollable-after skrollable-between' data-bottom-center='transform: translateX(200px); opacity: 0' data-center-center='transform: translateX(0); opacity: 1')
            .adaptis-introduction-item-content__title
                span We develop
                span mission critical applications
            .adaptis-introduction-item-content__context
                .adaptis-introduction-item-content__context-highlight
                    span Delivering results
                    span Delivering solutions
                .adaptis-introduction-item-content__context-desc At Adaptis, we take challenges head-on. We are a collective of problem solvers and creative thinkers, web engineers and analysts. If you need a digital agency that has the experience in delivering critical web platforms for your business, then let’s talk.
                a(href="#").adaptis-introduction-item-content__context-link LET'S TALK

