mixin adaptis-solution-block
    section.adaptis-solution-block
        .adaptis-solution-decor
        .adaptis-solution-container
            .adaptis-solution-container-content
                .adaptis-solution-container-content-title
                    span Providing
                    span digital solutions
                .adaptis-solution-container-content-desc
                    p Helping companies to become more digitally connected is one of our specialities. From design thinking to machine learning, we start with a holistic approach that combines core values with the value of technology solutions. 
                    p The result, clients have a much deeper grasp on their company’s purpose and are better prepared to maintain consistency in the connected age.
            ul.adaptis-solution-container-items
                li.adaptis-solution-container-items__item
                    p.adaptis-solution-container-items__item--content User Experience <br> Design
                    .adaptis-solution-container-items__item--text
                        span UX
                        span UI
                li.adaptis-solution-container-items__item
                    p.adaptis-solution-container-items__item--content Development <br> & Delivery
                li.adaptis-solution-container-items__item
                    p.adaptis-solution-container-items__item--content Agency <br> Partnership
            .adaptis-solution-container-title
                span To support 
                span global companies

mixin adaptis-clients
    section.adaptis-clients
        .adaptis-clients-container
            .adaptis-clients-container-grid
                each val, index in adaptisClientsArray
                    .adaptis-clients-container-grid-item
                        a(href="#")
                            img(class="load done" src=`${val.src}` alt=`${val.alt}`)

mixin adaptis-relative-block
    section.adaptis-relative-block
        .adaptis-relative-block-container
            ul.adaptis-relative-block-container-items
                each val, index in adaptisRelativeBlockArray
                    li.adaptis-relative-block-container-items__item
                        a(href="#" style=`background-image: url(${val.backgroundImage})`).adaptis-relative-block-container-items__item-thumb
                            .adaptis-relative-block-container-items__item-caption= val.caption
                        a(href="#").adaptis-relative-block-container-items__item-title= val.title
                        .adaptis-relative-block-container-items__item-desc= val.desc
                        a(href="#").adaptis-relative-block-container-items__item-link= val.link

mixin adaptis-footer-clocks
    each val, index in adaptisFooterLocationsArray
        .adaptis-footer-clock
            .adaptis-footer-clock__clock
                div(class=`adaptis-footer-clock__clock--${val.clock}`)
                    .adaptis-footer-clock__clock--location-hours
                        .adaptis-footer-clock__clock-location-hours--hours
                    .adaptis-footer-clock__clock--location-minutes
                        .adaptis-footer-clock__clock-location-minutes--minutes
                    .adaptis-footer-clock__clock--location-seconds
                        .adaptis-footer-clock__clock-location-seconds--seconds
            .adaptis-footer-clock__text
                .adaptis-footer-clock__text--location= val.location
                .adaptis-footer-clock__text--phone
                    a(href="#")= val.phone
                .adaptis-footer-clock__text--email
                    a(href="#")= val.email

mixin adaptis-footer
    footer.adaptis-footer
        .adaptis-footer-container
            a(href="#").adaptis-footer-container__logo
                span ADAPTIS
        .adaptis-footer-items
            each val, index in adaptisHeaderMenuBarItems
                a.adaptis-footer-item(href="#")= val
        .adaptis-footer-clocks
            +adaptis-footer-clocks

mixin adaptis-contact
    section.adaptis-contact
        .adaptis-contact-container
            .adaptis-contact-container-title
                span Every project
                span Starts with a conversation
            .adaptis-contact-container-desc We’re always looking to meet and work with companies that have forwarded thinking views. Our team is a mixed bunch of strategists, designers, developers, analysts, with passionate and all-round nice people.
            form(method="POST").adaptis-contact-container-form
                each val, index in adaptisContactFields
                    .adaptis-contact-container-form__field
                        label(for=`${val.labelFor}`).adaptis-contact-container-form__field--label= val.labelText
                        input(id=`${val.ID}` type=`${val.inputType}` name=`${val.name}`).adaptis-contact-container-form__field--input
                .adaptis-contact-container-form__field
                    button(type="submit").adaptis-contact-container-form__field--button
                        span Submit


